<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#6474E4"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/tx_nome_contato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tx_email_contato"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tx_nome_contato"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/bt_deletar"
                android:text="TextView"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/bt_deletar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@id/tx_email_contato"
                android:layout_alignParentEnd="true"
                app:srcCompat="@android:drawable/ic_menu_delete" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>